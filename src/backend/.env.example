# Neon PostgreSQL connection string
# Get this from your Neon dashboard: https://console.neon.tech
DATABASE_URL=postgresql://neondb_owner:password@host:port/neondb?sslmode=require

# JWT settings (change these for production)
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Backend settings
PROJECT_NAME=Todo Webapp API
API_PREFIX=/api

# CORS origins (comma-separated for multiple)
BACKEND_CORS_ORIGINS=http://localhost:3000
